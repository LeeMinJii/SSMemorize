<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="9"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/round_dark"
        android:text="   단어 암기 게임"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/tab2_game"
        android:paddingLeft="20dp"
        android:fontFamily="@font/cafe" />


    <LinearLayout
        android:layout_below="@+id/tv_title"
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/game1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="객관식 게임"
            android:textSize="30dp"
            android:textColor="@color/dark"
            android:background="@drawable/thin_gray"
            android:fontFamily="@font/cafe"/>

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text=" 최고기록 : 100"
            android:textSize="20dp"
            android:fontFamily="@font/cafe_air"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/little_star" />

        <Button
            android:id="@+id/game2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="주관식 게임"
            android:textSize="30dp"
            android:textColor="@color/dark"
            android:background="@drawable/thin_gray"
            android:fontFamily="@font/cafe" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text=" 최고기록 : 80"
            android:textSize="20dp"
            android:fontFamily="@font/cafe_air"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/little_star" />

        <Button
            android:id="@+id/game3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="카드 게임"
            android:textSize="30dp"
            android:textColor="@color/dark"
            android:background="@drawable/thin_gray"
            android:fontFamily="@font/cafe" />
    </LinearLayout>

</RelativeLayout>