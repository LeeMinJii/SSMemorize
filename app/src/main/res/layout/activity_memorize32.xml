<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageButton
        android:id="@+id/btn32"
        android:layout_width="55dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back"
        android:background="@color/transparent"/>

    <TextView
        android:id="@+id/tv_wordtype32"
        android:layout_below="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="수능 영단어"
        android:textSize="23dp"
        android:textColor="@color/dark"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@color/gray"
        android:fontFamily="@font/cafe"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Day 01"
                    android:textColor="@color/dark"
                    android:textSize="20dp"
                    android:fontFamily="@font/cafe"
                    android:drawableLeft="@drawable/right"/>

                <Button
                    android:id="@+id/btn_start_study"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:text="start"
                    android:textSize="12dp"
                    android:background="@drawable/thin_gray"
                    android:fontFamily="@font/cafe"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:background="@drawable/round_gray"
                    android:text="reset"
                    android:textSize="10dp"
                    android:textColor="@color/dark"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cafe"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/check"
                    android:layout_margin="3dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/item2"
                android:layout_below="@id/item1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Day 02"
                    android:textColor="@color/dark"
                    android:textSize="20dp"
                    android:fontFamily="@font/cafe"
                    android:drawableLeft="@drawable/right"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:text="start"
                    android:textSize="12dp"
                    android:background="@drawable/thin_gray"
                    android:fontFamily="@font/cafe"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:background="@drawable/round_gray"
                    android:text="reset"
                    android:textSize="10dp"
                    android:textColor="@color/dark"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cafe"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/check"
                    android:layout_margin="3dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item3"
                android:layout_below="@id/item2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Day 03"
                    android:textColor="@color/dark"
                    android:textSize="20dp"
                    android:fontFamily="@font/cafe"
                    android:drawableLeft="@drawable/right"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:text="start"
                    android:textSize="12dp"
                    android:background="@drawable/thin_gray"
                    android:fontFamily="@font/cafe"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:background="@drawable/round_gray"
                    android:text="reset"
                    android:textSize="10dp"
                    android:textColor="@color/dark"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cafe"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/check"
                    android:layout_margin="3dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item4"
                android:layout_below="@id/item3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Day 04"
                    android:textColor="@color/dark"
                    android:textSize="20dp"
                    android:fontFamily="@font/cafe"
                    android:drawableLeft="@drawable/right"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:text="start"
                    android:textSize="12dp"
                    android:background="@drawable/thin_gray"
                    android:fontFamily="@font/cafe"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:background="@drawable/round_gray"
                    android:text="reset"
                    android:textSize="10dp"
                    android:textColor="@color/dark"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cafe"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/check"
                    android:layout_margin="3dp"/>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>