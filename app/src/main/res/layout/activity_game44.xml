<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_game_score"
        android:drawableLeft="@drawable/star"
        android:fontFamily="@font/cafe"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text=" 총 점수 : 80점"
        android:textColor="@color/dark"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="40dp"
        android:textSize="35dp"
        android:background="@drawable/thin_gray"/>

    <Button
        android:id="@+id/btn_game_end"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_game_score"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/dark"
        android:fontFamily="@font/cafe"
        android:text="게임 종료"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_game_re"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_game_score"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/btn_game_end"
        android:backgroundTint="@color/dark"
        android:fontFamily="@font/cafe"
        android:text="다시 하기"
        android:textColor="@color/white"
        android:textSize="20dp" />


</RelativeLayout>